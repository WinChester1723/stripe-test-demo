@model IEnumerable<ProductEntity>

<br />

<table class="table tabler-reponsive table-light table-bortered" style="width:100%;">
    <tr>
        <th>Product Name</th>
        <th>Rate</th>
        <th>Quantity</th>
        <th>Product Image</th>
        <th>Total</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product</td>
            <td>@item.Rate</td>
            <td>@item.Quantity</td>
            <td><img src="@item.ImagePath" style="width:150px; height:150px;" /></td>
            <td>@(item.Rate * item.Quantity)</td>
        </tr>
    }
</table>

<br />
<p>
    <a asp-action="Checkout" asp-controller="CheckOut" value="CheckOut">CheckOut</a>
</p>